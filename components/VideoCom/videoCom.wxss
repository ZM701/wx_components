/* components/video/video.wxss */
/* 横屏的样式 */
.videoTotal{
  padding: 5px;
}
.title{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-wrap:break-word; 
    word-break:break-all; 
    margin-bottom: 5px;
    font-size: 32rpx;
}
.videos{
  width: 100%;
  height: 200px;
}
.userInfo{
  font-size: 30rpx;
}
.userInfo text{
  margin-right: 10px;
}
/* 竖屏的样式 */
.videoH{
  overflow: hidden;
}
.videoH>view,.videoH>video{
  float: left;
}
.videoH>view{
  width: 70%;
}
.videoH>video{
  width: 30%;
  height: 100px;
}
.left{
  height:100px;
  position: relative;
}
.left .title{
  position: absolute;
  left: 0;
  top:0;
}
.left .userInfo{
  position: absolute;
  left: 0;
  bottom: 0;
}
.videoPlay{
  position: relative;
  height: 200px;
  width: 100%;
}
.videoPlay .videos{
  position: absolute;
  left: 0;
  top:0;
}
.videoPlay .cover{
  z-index: 9999;
  width: 50px;
  height: 50px;
  position: absolute;
  left: 50%;
  top:50%;
  margin-left: -25px;
  margin-top: -22px;
}
