/* components/VoteActive/voteActive.wxss */
.total{
  padding: 5px;  
  font-size: 32rpx;
}
.main{
  overflow: hidden;
  margin-bottom: 10px;
}
.left{
  float: left;
  width: 40%;
  height: 100px;
  border: 1px solid red;
  position: relative;
}
.left .imgs{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top:0;
}
.time{
  width: 100%;
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 20px;
  line-height: 20px;
  background: rgba(0,0,0,0.5);
  color: #fff;
  text-align: center;
}
.right{
  width: 55%;
  float: right;
  height: 100px;
  position: relative;
}
.title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-wrap:break-word; 
  word-break:break-all; 
  position: absolute;
  left: 0;
  top:0;
}
.number{
  color: #666;
  position: absolute;
  left: 0;
  bottom: 0;
}